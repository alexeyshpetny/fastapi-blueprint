# FastAPI Blueprint - Environment Variables
# Copy this file to .env and adjust values as needed
# For complete documentation, see README.md Configuration section

# Application
APP_ENVIRONMENT=development
APP_DEBUG=false

# Database
APP_DB_HOST=postgres
APP_DB_PORT=5432
APP_DB_USER=postgres
APP_DB_PASSWORD=postgres
APP_DB_NAME=fastapi_blueprint

# Cache (Redis)
APP_CACHE_ENABLED=true
APP_CACHE_HOST=redis
APP_CACHE_PORT=6379

# Authentication
APP_JWT_SECRET_KEY=change-me-in-production-minimum-32-characters-long-secret-key

# Rate Limiting
APP_RATE_LIMIT_ENABLED=true
APP_RATE_LIMIT_DEFAULT=100/minute
